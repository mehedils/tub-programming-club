<header class="mb-6 overflow-hidden rounded-lg bg-white shadow-md">
  <!-- Top section with logos and club info -->
  <div class="flex items-center gap-4 px-4 py-4 sm:px-6">
    <!-- Club logo -->
    <img
      src="/logo.jpg"
      alt="TUB Programming Club Logo"
      class="h-16 w-16 rounded-full object-cover sm:h-20 sm:w-20"
    />
    <!-- Club info -->
    <div class="flex-1 text-center">
      <h1 class="text-xl font-extrabold uppercase text-primary-800 sm:text-2xl md:text-3xl">
        TUB Programming Club
      </h1>
      <p class="text-sm font-semibold text-gray-700 sm:text-base">
        Trust University, Barishal
      </p>
      <p class="text-xs text-gray-500 sm:text-sm">
        Ruiya, Nabogram Road, Barishal
      </p>
    </div>
    <!-- University logo -->
    <img
      src="/trust-university-logo.png"
      alt="Trust University Barishal Logo"
      class="h-16 w-16 rounded-full object-contain sm:h-20 sm:w-20"
    />
  </div>
  <!-- Green banner -->
  <div class="bg-primary-600 px-4 py-2.5">
    <h2 class="text-center text-sm font-bold uppercase tracking-wider text-white sm:text-base">
      Membership Registration Form
    </h2>
  </div>
</header>
