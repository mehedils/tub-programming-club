---
interface Props {
  label: string;
  name: string;
  required?: boolean;
  placeholder?: string;
  rows?: number;
  id?: string;
}

const {
  label,
  name,
  required = false,
  placeholder = '',
  rows = 3,
  id = name,
} = Astro.props;
---

<div>
  <label for={id} class="mb-1 block text-sm font-medium text-gray-700">
    {label}
    {required && <span class="text-red-500">*</span>}
  </label>
  <textarea
    id={id}
    name={name}
    required={required}
    placeholder={placeholder}
    rows={rows}
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm shadow-sm transition-colors placeholder:text-gray-400 focus:border-primary-500 focus:outline-none focus:ring-1 focus:ring-primary-500"
  ></textarea>
</div>
