---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="mb-6">
  <div class="rounded-t-lg bg-primary-700 px-4 py-2.5">
    <h2 class="text-center text-sm font-bold uppercase tracking-wide text-white">
      {title}
    </h2>
  </div>
  <div class="rounded-b-lg border border-t-0 border-gray-200 bg-white px-4 py-5 sm:px-6">
    <slot />
  </div>
</section>
