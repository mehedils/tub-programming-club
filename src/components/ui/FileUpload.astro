---
interface Props {
  label: string;
  name: string;
  accept?: string;
  required?: boolean;
  id?: string;
}

const {
  label,
  name,
  accept = 'image/jpeg,image/png',
  required = false,
  id = name,
} = Astro.props;
---

<div>
  <label class="mb-1 block text-sm font-medium text-gray-700">
    {label}
    {required && <span class="text-red-500">*</span>}
  </label>
  <div
    class="relative flex flex-col items-center justify-center rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 p-6 transition-colors hover:border-primary-400 hover:bg-primary-50/30"
    data-upload-zone={id}
  >
    <!-- Preview image (hidden by default) -->
    <img
      src=""
      alt="Preview"
      class="mb-3 hidden h-32 w-32 rounded-md object-cover"
      data-upload-preview={id}
    />
    <!-- Upload icon and text -->
    <div class="text-center" data-upload-placeholder={id}>
      <svg
        class="mx-auto mb-2 h-10 w-10 text-gray-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
      <p class="text-sm text-gray-500">
        <span class="font-medium text-primary-600">Click to upload</span> or drag and drop
      </p>
      <p class="mt-1 text-xs text-gray-400">JPG or PNG</p>
    </div>
    <input
      type="file"
      id={id}
      name={name}
      accept={accept}
      required={required}
      class="absolute inset-0 cursor-pointer opacity-0"
      data-upload-input={id}
    />
  </div>
</div>

<script>
  document.querySelectorAll<HTMLInputElement>('[data-upload-input]').forEach((input) => {
    const id = input.dataset.uploadInput!;
    const preview = document.querySelector<HTMLImageElement>(`[data-upload-preview="${id}"]`);
    const placeholder = document.querySelector<HTMLElement>(`[data-upload-placeholder="${id}"]`);

    if (!preview || !placeholder) return;

    input.addEventListener('change', () => {
      const file = input.files?.[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          preview.src = e.target?.result as string;
          preview.classList.remove('hidden');
          placeholder.classList.add('hidden');
        };
        reader.readAsDataURL(file);
      } else {
        preview.classList.add('hidden');
        preview.src = '';
        placeholder.classList.remove('hidden');
      }
    });
  });
</script>
